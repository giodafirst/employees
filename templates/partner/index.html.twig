{% extends 'base.html.twig' %}

{% block title %}Hello PartnerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des partenaires</h1>

    <table class="table-partner">
        <tbody class="body-partner">
        {% for partner in partners %}
            <tr>
                   <td><img src="{{ asset("/images" ~ partner.logo) }}" alt="{{ partner.title }} width="200" height="200"></td> 
            </tr>
            <tr>
                <td>{{ partner.title }}</td>
            </tr>
            <tr>
                <td><a href="{{ partner.url }}">{{ partner.url }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
